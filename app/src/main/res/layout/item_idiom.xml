<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/card_view"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardBackgroundColor="@color/white"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:contentPaddingBottom="4dp"
                                    card_view:contentPaddingTop="4dp"
                                    card_view:cardCornerRadius="0dp"
                                    card_view:cardElevation="5dp"


    >

    <RelativeLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/word_mean"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiom"
                android:textStyle="bold|italic"
                android:id="@+id/idiom"
                android:textColor="@color/light_brown"


                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idiom"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:id="@+id/meaning"
                android:maxLines="3"
                android:layout_marginRight="60sp"
                android:textColor="@color/dark_brown"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meaning"
                android:textSize="12sp"
                android:textColor="@color/beige"
                android:id="@+id/cat"
                android:layout_marginTop="10dp"
                android:text="advanced"/>









        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="20dp"
            >


            <ImageButton
                android:id="@+id/star"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/star"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:text="NOR"
                android:id="@+id/status"
                android:textColor="@color/darkpurple"/>



        </RelativeLayout>








    </RelativeLayout>


</android.support.v7.widget.CardView>
