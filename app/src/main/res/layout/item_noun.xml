<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/card_view"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardBackgroundColor="@color/colorPrimaryDark"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:contentPaddingBottom="4dp"
                                    card_view:contentPaddingTop="4dp"
                                    card_view:cardCornerRadius="0dp"
                                    card_view:cardElevation="5dp"


    >

    <RelativeLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/word_mean"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noun"
                android:textStyle="bold"
                android:id="@+id/noun"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noun"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:id="@+id/desc"
                android:maxLines="3"
                android:layout_marginRight="60sp"
                android:textColor="@android:color/white"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor."/>





            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginTop="15dp"
                android:id="@+id/noun_det"
                android:layout_marginLeft="110sp"
                android:text="View Details"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:backgroundTint="#BCD400"

                />




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="20dp"
            >


            <ImageButton
                android:id="@+id/star"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/star"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:text="NOR"
                android:id="@+id/status"
                android:textColor="@color/darkpurple"/>



        </RelativeLayout>








    </RelativeLayout>


</android.support.v7.widget.CardView>
