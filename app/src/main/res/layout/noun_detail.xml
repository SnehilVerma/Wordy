<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:id="@+id/noun_det"
            android:layout_marginLeft="30sp"
            android:text="noun"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noun_det"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:text="/'san(k)tem/"
            android:id="@+id/pro"
            android:textColor="@android:color/black"

            />

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:id="@+id/image"
            android:layout_toRightOf="@+id/noun_det"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="20sp"
            android:src="@drawable/w2"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/usage"
            android:layout_marginLeft="30sp"
            android:textSize="20dp"
            android:textStyle="bold"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:layout_marginTop="20sp"
            android:layout_below="@+id/usage"
            android:layout_marginLeft="50sp"
            android:maxLines="3"
            android:textColor="@android:color/black"
            android:id="@+id/u1"
            android:layout_marginRight="50sp"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:layout_marginTop="20sp"
            android:maxLines="3"
            android:id="@+id/u2"
            android:textColor="@android:color/black"
            android:layout_below="@+id/u1"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:textSize="20dp"

            />



    </RelativeLayout>

</FrameLayout>