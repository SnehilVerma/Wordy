<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/card_view"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20sp"
                                        card_view:cardBackgroundColor="@color/dark_brown"
                                        card_view:cardUseCompatPadding="true"
                                        card_view:contentPaddingBottom="10dp"
                                        card_view:contentPaddingTop="4dp"
                                        card_view:cardCornerRadius="0sp"
                                        card_view:cardElevation="5dp"


        >





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:id="@+id/word_det"
            android:layout_marginLeft="30sp"
            android:text="word"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word_det"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:text="Pronunciation"
            android:id="@+id/pro_title"
            android:textStyle="italic"
            android:textColor="@color/star_yellow"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pro_title"
            android:layout_marginTop="0sp"
            android:layout_marginLeft="30sp"
            android:text="Not available"
            android:id="@+id/pro"
            android:textColor="@android:color/white"

            />

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_toRightOf="@+id/word_det"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="20sp"
            android:src="@drawable/w2"/>




    </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/card_view2"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="220sp"
                                        card_view:cardBackgroundColor="@color/white"
                                        card_view:cardUseCompatPadding="true"
                                        card_view:contentPaddingBottom="20dp"
                                        card_view:contentPaddingTop="4dp"
                                        card_view:cardCornerRadius="0sp"
                                        card_view:cardElevation="5dp"


        >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"

        >





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usage"
            android:id="@+id/usage"
            android:layout_marginLeft="30sp"
            android:textSize="20dp"
            android:textColor="@color/light_brown"


            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:layout_marginTop="20sp"
            android:layout_below="@+id/usage"
            android:layout_marginLeft="50sp"
            android:maxLines="3"
            android:textColor="@android:color/black"
            android:id="@+id/u1"
            android:textStyle="italic"
            android:layout_marginRight="50sp"
            android:textSize="18dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:layout_marginTop="20sp"
            android:maxLines="3"
            android:id="@+id/u2"
            android:textColor="@android:color/black"
            android:layout_below="@+id/u1"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:textStyle="italic"

            android:textSize="18dp"

            />






    </RelativeLayout>
    </android.support.v7.widget.CardView>




</FrameLayout>